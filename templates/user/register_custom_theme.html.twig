{% block form_row %}
    {% spaceless %}
        <div >
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
                {% for error in errors %}
                    <span style="color:red;"> {{ error.message }}</span>
                {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock %}
